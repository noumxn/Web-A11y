{
  "name": "accessibility-testing-tool",
  "module": "app.js",
  "type": "module",
  "contributors": [
    "Ashna Razdan",
    "Cindy Lee",
    "Zuting Chen",
    "Nouman Syed"
  ],
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.1.0"
  },
  "scripts": {
    "test": "mocha --require esm tests/**/*.test.js",
    "start": "node app.js",
    "lint": "eslint .",
    "fix": "npm run format && npm run lint:fix",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix .",
    "fix:eslint": "eslint --ext .js,.ts,.jsx,.tsx --fix .",
    "fix:prettier": "prettier --write .",
    "docs": "jsdoc -d docs --configure jsdocConf.json"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "chalk": "^5.3.0",
    "color-string": "^1.9.1",
    "colornames": "^1.1.1",
    "esm": "^3.2.25",
    "fs-extra": "^11.1.1",
    "jsdocs": "^1.0.0",
    "jsdom": "^22.1.0",
    "text-readability": "^1.0.5",
    "url": "^0.11.3",
    "wcag-color": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint:fix"
    ]
  }
}
